---
import { Icon } from "astro-icon";
import Link from "../components/Link.astro";
import navData from "../data/nav";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" aria-label="Go Home" class="logomark">
      <Icon name="logomark" width="60" /></a
    >
    <ul>
      {
        navData.map((item) => (
          <Link
            href={item.path}
            text={item.name}
            style="secondary"
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../scripts/nav";
</script>
